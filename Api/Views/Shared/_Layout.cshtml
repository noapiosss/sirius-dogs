@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/test.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/cropper/cropper.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body id="body">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" id="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sirius</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                    
                    <hr class="toggle-menu-vertical-separator">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="nav-link-add-dog" asp-area="" asp-controller="Dogs" asp-action="Create">Add new dog</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" id="nav-link-shelter" asp-area="" asp-controller="Dogs" asp-action="Shelter">Shelter Dogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="nav-link-home" asp-area="" asp-controller="Dogs" asp-action="Home">Home Dogs</a>
                        </li>
                    </ul>
                    <hr class="toggle-menu-vertical-separator">
                    <span class="navbar-text" id="session-info">
                        @if(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value != null)
                        {                                
                            <p class="username-info"> @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name).Value </p>
                            <a class="sign-out-link" id="sign-out-link" href="/Session/Signout">[sign-out]</a>
                        }
                        else
                        {
                            <a class="sign-in-link" id="sign-out-link" href="/Session/Signin">Sign In</a>                                
                        }
                    </span>             
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <svg data-name="Livello 1" viewBox="0 0 240 240" width="24" height="24">
                <defs>
                    <linearGradient id="linear-gradient" x1="120" y1="240" x2="120" gradientUnits="userSpaceOnUse">
                        <stop offset="0" stop-color="#1d93d2"/>
                        <stop offset="1" stop-color="#38b0e3"/>
                    </linearGradient>
                </defs>
                <title>Telegram_logo</title>
                <a href="https://t.me/Sirius_doges_bot">
                    <circle cx="120" cy="120" r="120" fill="url(#linear-gradient)"/>
                    <path d="M81.229,128.772l14.237,39.406s1.78,3.687,3.686,3.687,30.255-29.492,30.255-29.492l31.525-60.89L81.737,118.6Z" fill="#c8daea"/>
                    <path d="M100.106,138.878l-2.733,29.046s-1.144,8.9,7.754,0,17.415-15.763,17.415-15.763" fill="#a9c6d8"/>
                    <path d="M81.486,130.178,52.2,120.636s-3.5-1.42-2.373-4.64c.232-.664.7-1.229,2.1-2.2,6.489-4.523,120.106-45.36,120.106-45.36s3.208-1.081,5.1-.362a2.766,2.766,0,0,1,1.885,2.055,9.357,9.357,0,0,1,.254,2.585c-.009.752-.1,1.449-.169,2.542-.692,11.165-21.4,94.493-21.4,94.493s-1.239,4.876-5.678,5.043A8.13,8.13,0,0,1,146.1,172.5c-8.711-7.493-38.819-27.727-45.472-32.177a1.27,1.27,0,0,1-.546-.9c-.093-.469.417-1.05.417-1.05s52.426-46.6,53.821-51.492c.108-.379-.3-.566-.848-.4-3.482,1.281-63.844,39.4-70.506,43.607A3.21,3.21,0,0,1,81.486,130.178Z" fill="#fff"/>
                </a>
            </svg> - serach via telegram
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/header.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
