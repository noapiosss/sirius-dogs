@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/test.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/cropper/cropper.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body id="body">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" id="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sirius</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="nav-link-add-dog" asp-area="" asp-controller="Dogs" asp-action="Create">Add new dog</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" id="nav-link-shelter" asp-area="" asp-controller="Dogs" asp-action="Shelter">Shelter Dogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="nav-link-home" asp-area="" asp-controller="Dogs" asp-action="Home">Home Dogs</a>
                        </li>
                    </ul>
                    <span class="navbar-text" id="session-info">
                        @if(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value != null)
                        {                                
                            <p class="username-info"> @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name).Value </p>
                            <a class="sign-out-link" id="sign-out-link" href="/Session/Signout">[sign-out]</a>
                        }
                        else
                        {
                            <a class="sign-in-link" id="sign-out-link" href="/Session/Signin">[sign-in]</a>                                
                        }
                    </span>             
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - web
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/header.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
