@{
    ViewData["Title"] = "Signin";
    Layout = "_Layout";
}

<form asp-action="Signin">
    <h2>Sign-in first!</h2>
    <input type="text" name="username" class="form-control" placeholder="Username" aria-label="Last name" style="width: 25%;">
    <input type="password" name="password" class="form-control" placeholder="Password" aria-label="Last name" style="width: 25%;">
    <div class="form-group">
        <input type="submit" value="Sign-in" class="btn btn-primary" />
    </div>
</form>
