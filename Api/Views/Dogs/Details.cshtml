@model Contracts.Database.Dog

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

@inherits Helper<TModel>

<h1>Details</h1>


<table class="table">    
    @* <thead>
        <tr>
            <th>
               1
            </th>
            <th>
                2
            </th>
            <th>
                3
            </th>
            <th>
                4
            </th>
            <th></th>
        </tr>
    </thead> *@
    <tbody>
        <td class="photos-cell">
            <div id="dogCarousel" class="carousel slide carousel-fade" data-mdb-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="@Html.DisplayFor(model => model.TitlePhoto)" class="carousel-img">
                    </div>

                    @foreach (var photo in Model.Photos)
                    {
                        <div class="carousel-item">
                            <img src="@photo.PhotoPath.ToString()" class="carousel-img">
                        </div>
                    }

                    <button class="carousel-control-prev" type="button" data-bs-target="#dogCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#dogCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    
                </div>
            </div>
        </td>
        <td>
            <div>
                <h4>@Html.DisplayFor(model => model.Name)</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Breed)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Breed)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Size)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Size)
                    </dd>
                    <dt class = "col-sm-2">
                        Age
                    </dt>
                    <dd class = "col-sm-10">
                        @GetAge(Model.BirthDate)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.About)
                    </dt>
                    <dd class = "col-sm-10">
                        @foreach (var line in Model.About.Split("\r\n"))
                        {
                            @line <br>
                        }
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Row)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Row)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Enclosure)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Enclosure)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.LastUpdate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Model.LastUpdate (@Model.UpdatedBy)
                    </dd>
                </dl>
            </div>
            <div>
                @if(Model.WentHome)
                {
                    <button type="button" class="btn btn-danger" id="status-button" dogId="@Model.Id">Back to shelter</button>
                }
                else
                {
                    <button type="button" class="btn btn-success" id="status-button" dogId="@Model.Id">Went home</button>
                }
                <button type="button" class="btn btn-warning" id="edit-button" dogId="@Model.Id">Edit</button>
                <button type="button" class="btn btn-primary" id="back-to-list-button">Back to List</button>
            </div>
        </td>
    </tbody>
</table>

<script src="~/js/details-page.js"></script>
