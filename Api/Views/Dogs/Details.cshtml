@model Contracts.Database.Dog

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Details</h1>


<table class="table">    
    @* <thead>
        <tr>
            <th>
               1
            </th>
            <th>
                2
            </th>
            <th>
                3
            </th>
            <th>
